<div class="chat-massages">
  <% chats.each do |chat| %>
   <% if chat.user_id == current_user.id %>
    <div class="message self">
      <div class="message-body">
        <%= chat.message %>
      </div>
    </div>
   <% else %>
    <div class="messsage other">
      <div class="message-sender"><%= chat.user.name %></div>
      <div class="message-body">
        <%= chat.message %>
      </div>
    </div>
   <% end %>
  <% end %>
</div>